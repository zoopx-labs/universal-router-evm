{
  "name": "@zoopx/evm-thin-router",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf artifacts cache typechain-types",
    "build": "hardhat compile",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,tsx,sol,md,json}\"",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "size": "hardhat size-contracts",
    "gas": "HARDHAT_MAX_MEMORY=4096 hardhat test --network hardhat",
    "deploy:sepolia": "hardhat run script/deploy.ts --network sepolia",
    "deploy:local": "hardhat run script/deploy.ts --network hardhat"
  }
}
